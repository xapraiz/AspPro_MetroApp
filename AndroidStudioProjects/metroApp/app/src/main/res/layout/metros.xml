<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffc1c0ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="70dp"
        android:width="310dp"
        android:height="220dp"
        android:background="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tdest1"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:textColor="#ffffdc05"
        android:text="destino1"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ttiempodest1"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="280dp"
        android:textColor="#ffffdc05"
        android:text="00"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tdest2"
        android:layout_alignTop="@+id/Tdest1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:textColor="#ffffdc05"
        android:text="destino2"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ttiempodest2"
        android:layout_alignTop="@+id/Tdest1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="280dp"
        android:textColor="#ffffdc05"
        android:text="00"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo de viaje:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:layout_marginTop="42dp"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 min"
        android:id="@+id/Tduracion"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/Bsalir"
        android:background="#ffff1719"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Ttiempodest2"
        android:layout_alignEnd="@+id/Ttiempodest2" />

</RelativeLayout>